
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Header_Footer.cshtml";
}

<div ng-app="getleftchatbox" ng-controller="loadLeftBoxController">
    <div class="left-Box" infinitescroll="Nextpage()">
        <div class="row">
            <form class="w-100 searchbtn">
                <input class="form-control w-100" type="text" placeholder="Search">
                <button class="btn btn-success w-100" type="submit">Search</button>
            </form>
        </div>
        <div class="marginImportant"></div>
        <div class="row" ng-repeat="item in detailslist">
            <nav class="navbar navbar-expand-sm navbar-light   w-100">
                <button class="navbar-toggler d-lg-none avt" type="button" data-toggle="collapse"
                        data-target="#{{item.id}}" aria-label="Toggle navigation">
                    <div class="avt">
                        <img src="/image/{{item.avatar}}" alt="Avatar">
                    </div>
                </button>
                <div class="collapse navbar-collapse">
                    <button class="avt" type="button" data-toggle="collapse" data-target="#{{item.id}}"
                            aria-label="Toggle navigation">
                        <img src="/image/{{item.avatar}}" alt="Avatar">
                    </button>
                    <button class="box-sms-left notseen" type="button" data-toggle="collapse" data-target="{{item.id}}"
                            aria-label="Toggle navigation">
                        <div class="username-box-left">
                            {{item.name}}
                        </div>
                        <div class="mess-box-left ">
                            {{item.mess}}
                        </div>
                        <div class="timebox">
                            {{item.time}}
                        </div>
                    </button>
                    <div class="clearfix"></div>
                </div>
            </nav>
        </div>
        <span ng-show="Isloading" class="loading">Loading...</span>
    </div>
</div>

